{
    "name": "code-spin",
    "displayName": "code-spin",
    "description": "SPIN runner of vscode",
    "version": "0.0.1",
    "publisher": "TaoYu",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:spin.check",
        "onCommand:spin.random",
        "onCommand:spin.run"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tomyutao/code-spin.git"
    },
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "spin.run",
            "title": "Spin Run",
            "description": "Run SPIN with -run option"
        }, {
            "command": "spin.check",
            "title": "Spin Check",
            "description": "Run SPIN with -a option"
        }, {
            "command": "spin.random",
            "title": "Spin Random",
            "description": "Run random checker with random option"
        }],
        "configuration": {
            "title": "SPIN configuration",
            "properties": {
                "spin.path": {
                    "type": "string",
                    "default": "/usr/local/bin/spin",
                    "description": "The path of the SPIN executions"
                },
                "spin.random": {
                    "type": "string",
                    "default": "-g -l -p -r -s -X  -u250",
                    "description": "The option to run random command in spin"
                },
                "spin.checkOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "The option to run check when saving file"
                },
                "spin.onSaveCommand": {
                    "type": "string",
                    "enum": [
                        "check",
                        "random",
                        "run"
                    ],
                    "default": "check",
                    "description": "Which command you want to run when saving"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}